          <button id="js-send-trigger" class = "btn btn-outline-primary" style="margin-left:195px;margin-right:5px;">Say</button>
          <button id="js-send-trigger2" class = "btn btn-outline-primary">Send</button>
          </form>
       
         <!-- この下がワードクラウドのオンオフ -->
         <p style = "margin-left:200px; margin-top:18px;  margin-bottom:5px;">音声入力</p>
         <button id="start-btn" class = "btn btn-outline-primary" style = "margin-right:5px; margin-left:195px">start</button>
         <button id="stop-btn"class = "btn btn-outline-primary">stop</button>
         <div id="result-div" ></div>
        </div>

        <p class="meta" id="js-meta" style = "margin-top:110px;width:100;display:none;"></p>
      </div>
      
    </div>
 

