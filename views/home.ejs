     <script>
        // チャットのスクロールを一番したから開始するだ
        window.onload = function() {
        var form = document.getElementById('form');
        var messages = document.getElementById('js-messages');

        var scrollToBottom = () => {
      messages.scrollTop = messages.scrollHeight;
    };
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      e.stopPropagation();
      // 一番下までスクロール
  
        scrollToBottom();
  
    });
    
  };
       

     
     </script>
