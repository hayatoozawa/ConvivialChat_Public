            <input type="text" id = "dami" value ="<%= value2 %>">
          </div>
         
              <div>
                <p style = "display:inline-block;">Video:</p>
                <div class="toggle-btn " id = "onoff">
                  <input type="checkbox"  checked class="cb-value" />
                  <span class="round-btn"></span>
                </div>
              </div>
              <div style = "margin-bottom:30px;">
                <p style = "display:inline-block;">Voice:</p>
                <div class="toggle-btn " id = "onoff2" >
                  <input type="checkbox"  checked class="cb-value" />
                  <span class="round-btn"></span>
                </div>
              </div>
        
          <button onclick="location.href='<%= `/` %>'" id="js-leave-trigger" class = "btn btn-danger" style ="margin-top:120px;display:block;">Leave</button>
        
        </div>

        <div  id="cloud">
          <pre class="messages" id="js-messages" style = "margin-top:80px;"></pre>
        </div>
        
        

        <div style = "margin-left:30px">
          <!-- <pre class="messages" id="js-messages" style = "margin-top:50px;"></pre> -->
